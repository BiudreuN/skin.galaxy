<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">20</defaultcontrol>
    <onload>Dialog.Close(fullscreeninfo,true)</onload>
    <onload>Dialog.Close(videoosd,true)</onload>
    <controls>
        <control type="group">
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="100" time="600" />
                <effect type="slide" start="115,0" end="0,0" time="300" />
            </animation>
            <animation type="WindowClose" reversible="false">
                <effect type="fade" start="100" end="0" time="400" />
                <effect type="slide" start="0,0" end="115,0" time="300" />
            </animation>
            <control type="group">
                <height>80</height>
                <right>50</right>
                <width>75%</width>
                <!-- Buttons -->
                <control type="button" id="3012">
                    <left>-1000</left>
                    <top>-1000</top>
                    <height>1</height>
                    <width>1</width>
                </control>
                <control type="grouplist" id="20">
                    <top>50%</top>
                    <orientation>horizontal</orientation>
                    <height>80</height>
                    <itemgap>10</itemgap>
                    <align>right</align>
                    <control type="button" id="11">
                        <width>auto</width>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>27px_Medium</font>
                        <label>[UPPERCASE]Continuar√° en [B]$INFO[Player.TimeRemaining(ss)][/B] segundos[/UPPERCASE]      </label>
                        <textoffsetx>30</textoffsetx>
                        <textcolor>darkgray</textcolor>
                        <focusedcolor>black</focusedcolor>
                        <shadowcolor>text_shadow</shadowcolor>
                        <texturefocus colordiffuse="F2FFFFFF" border="20">buttons/button-focus.png</texturefocus>
                        <onclick>SendClick(3012)</onclick>
                        <pulseonselect>false</pulseonselect>
                    </control>
                </control>
                <control type="image">
                    <top>50%</top>
                    <right>15</right>
                    <width>55</width>
                    <height>80</height>
                    <texture colordiffuse="F2000000">icons/videoinfo/play2.png</texture>
                    <aspectratio>keep</aspectratio>
                </control>
            </control>
        </control>
    </controls>
</window>
