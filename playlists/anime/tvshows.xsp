<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<smartplaylist type="tvshows">
    <name>Series - Anime</name>
    <match>one</match>
    <rule field="genre" operator="contains">anime</rule>
    <rule field="tag" operator="contains">anime</rule>
    <rule field="path" operator="contains">anime</rule>
    <limit>all</limit>
    <order direction="descending">rating</order>
</smartplaylist>
