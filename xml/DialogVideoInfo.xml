<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">990</defaultcontrol>
	<controls>
        <control type="multiimage">
            <depth>DepthBackground</depth>
            <right>0</right>
            <top>0</top>
            <width>100%</width>
            <height>100%</height>
            <aspectratio scalediffuse="false">scale</aspectratio>
            <fadetime>300</fadetime>
            <animation effect="zoom" center="auto" end="102,102" time="0" condition="Integer.IsGreater(System.StereoscopicMode,0)">conditional</animation>
            <animation effect="fade" time="300" >VisibleChange</animation>
            <imagepath diffuse="overlays/corner.png" background="true">$VAR[FanartVar]</imagepath>
            <include>OpenClose_Fade</include>
        </control>
        <control type="group">
            <include>OpenClose_FadeSlide_Right</include>
            <control type="list" id="5050">
                <visible allowhiddenfocus="true">!String.IsEmpty(ListItem.DBID) + String.IsEqual(ListItem.DBTYPE,tvshow)</visible>
                <visible>Integer.IsGreater(Container(5050).NumItems,0) + !Container(5050).IsUpdating</visible>
                <left>-100</left>
                <top>-100</top>
                <preloaditems>1</preloaditems>
                <itemlayout/>
                <focusedlayout/>
                <content sortorder="ascending" sortby="playcount" limit="1">$VAR[InfoDialogNextUpContent]</content>
            </control>
            <control type="grouplist">
                <orientation>vertical</orientation>
                <usecontrolcoords>true</usecontrolcoords>
                <top>120</top>
                <left>110</left>
                <width>100%</width>
                <height>100%</height>
                <itemgap>5</itemgap>
                <align>left</align>
                <onleft>noop</onleft>
                <onright>801</onright>
                <ondown>50</ondown>
                <animation effect="fade" start="100" end="0" tween="cubic" easing="inout" time="300" reversible="true" condition="ControlGroup(11).HasFocus">Conditional</animation>
                <control type="group">
                    <left>10</left>
                    <width>1000</width>
                    <height>250</height>
                    <control type="grouplist">
                        <height>250</height>
                        <align>right</align>
                        <orientation>vertical</orientation>
                        <control type="textbox">
                            <height max="250">auto</height>
                            <width>1000</width>
                            <font>56px_Regular</font>
                            <label>$VAR[TitleVar]</label>
                            <textcolor>FFEEEEEE</textcolor>
                            <shadowcolor>text_shadow</shadowcolor>
                            <visible>String.EndsWith(Control.GetLabel(15),color_transparent.png)</visible>
                            <autoscroll delay="3000" time="1000" repeat="3000">true</autoscroll>
                        </control>
                    </control>
                    <control type="image" id="15">
                        <width>700</width>
                        <height>250</height>
                        <align>left</align>
                        <fadetime>400</fadetime>
                        <aspectratio align="left" aligny="bottom">keep</aspectratio>
                        <texture background="true" fallback="colors/color_transparent.png">$VAR[ClearlogoVar]</texture>
                    </control>
                </control>
                <control type="grouplist" id="900">
                    <itemgap>0</itemgap>
                    <orientation>horizontal</orientation>
                    <align>left</align>
                    <height>80</height>
                    <animation effect="fade" start="100" end="0" tween="cubic" easing="inout" time="300" reversible="true" condition="ControlGroup(11).HasFocus">Conditional</animation>
                    <control type="button" id="990">
                        <width>auto</width>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>27px_Medium</font>
                        <label>       [UPPERCASE]$VAR[PlayVar][/UPPERCASE]</label>
                        <textoffsetx>30</textoffsetx>
                        <textcolor>FFEEEEEE</textcolor>
                        <focusedcolor>black</focusedcolor>
                        <shadowcolor>text_shadow</shadowcolor>
                        <texturefocus border="65,20,20,20">buttons/videoinfo-play.png</texturefocus>
                        <texturenofocus border="65,20,20,20" colordiffuse="FFEEEEEE">buttons/videoinfo-play-nf.png</texturenofocus>
                        <pulseonselect>false</pulseonselect>
                        <onclick condition="ListItem.IsResumable+!Container.Content(tvshows)">SendClick(9)</onclick>
                        <onclick condition="!ListItem.IsResumable+!Container.Content(tvshows)">SendClick(8)</onclick>
                        <onclick condition="Container.Content(tvshows)">PlayMedia($ESCINFO[Container(5050).ListItem.FileNameAndPath],resume)</onclick>
                        <onclick condition="Container.Content(tvshows)">Dialog.Close(movieinformation)</onclick>
                    </control>
                    <control type="button" id="991">
                        <width>auto</width>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>27px_Medium</font>
                        <label>       [UPPERCASE]Episodios[/UPPERCASE]</label>
                        <textoffsetx>30</textoffsetx>
                        <textcolor>FFEEEEEE</textcolor>
                        <focusedcolor>black</focusedcolor>
                        <shadowcolor>text_shadow</shadowcolor>
                        <texturefocus border="65,20,20,20">buttons/videoinfo-episode.png</texturefocus>
                        <texturenofocus border="65,20,20,20" colordiffuse="FFEEEEEE">buttons/videoinfo-episode-nf.png</texturenofocus>
                        <pulseonselect>false</pulseonselect>
                        <onclick>SetProperty(VideoResolution,$VAR[VideoResolutionVar],Home)</onclick>
                        <onclick>SetProperty(AudioChannels,$VAR[AudioChannelsVar],Home)</onclick>
                        <onclick>SetProperty(BaseWindow,InfoDialog,Home)</onclick>
                        <onclick>SetProperty(Rating,$VAR[RatingVar],Home)</onclick>
                        <onclick>SetProperty(Year,$INFO[Listitem.Year],Home)</onclick>
                        <onclick>SetProperty(TotalSeasons,$INFO[ListItem.Property(TotalSeasons)],Home)</onclick>
                        <onclick>SetProperty(Seasons,$VAR[SeasonVar],Home)</onclick>
                        <onclick>SetProperty(BaseWindow,1,Home)</onclick>
                        <onclick>Dialog.Close(movieinformation)</onclick>
                        <!-- activate ALL EPISODES view -->
                        <!-- from tvshow infodialog for library content -->
                        <onclick condition="String.IsEqual(ListItem.DBTYPE,tvshow) + !String.IsEmpty(ListItem.DBID)">SetProperty(ListItem.TVShowID2,$INFO[ListItem.DBID],Home)</onclick>
                        <onclick condition="String.IsEqual(ListItem.DBTYPE,tvshow) + !String.IsEmpty(ListItem.DBID)">SetProperty(KeepTVShowID,1,Home)</onclick>
                        <onclick condition="String.IsEqual(ListItem.DBTYPE,tvshow) + !String.IsEmpty(ListItem.DBID)">ActivateWindow(Videos,videodb://tvshows/titles/$INFO[ListItem.DBID]/-2/,return)</onclick>
                        <!-- from tvshow infodialog for non-library content -->
                        <onclick condition="String.IsEmpty(ListItem.DBID)">ActivateWindow(Videos,$ESCINFO[ListItem.FileNameAndPath],return)</onclick>
                        <visible>Container.Content(tvshows)</visible>
                    </control>
                    <control type="button" id="992">
                        <width>auto</width>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>27px_Medium</font>
                        <label>       [UPPERCASE]Reiniciar[/UPPERCASE]</label>
                        <textoffsetx>30</textoffsetx>
                        <textcolor>FFEEEEEE</textcolor>
                        <focusedcolor>black</focusedcolor>
                        <shadowcolor>text_shadow</shadowcolor>
                        <texturefocus border="65,20,20,20">buttons/videoinfo-reset.png</texturefocus>
                        <texturenofocus border="65,20,20,20" colordiffuse="FFEEEEEE">buttons/videoinfo-reset-nf.png</texturenofocus>
                        <pulseonselect>false</pulseonselect>
                        <visible>ListItem.IsResumable</visible>
                        <onclick>PlayMedia($ESCINFO[ListItem.FileNameAndPath],noresume)</onclick>
                        <onclick>Dialog.Close(movieinformation)</onclick>
                    </control>
                    <control type="radiobutton" id="993">
                        <width>80</width>
                        <align>right</align>
                        <aligny>center</aligny>
                        <font>27px_Medium</font>
                        <radioposx>16</radioposx>
                        <radioposy>1</radioposy>
                        <radiowidth>50</radiowidth>
                        <radioheight>80</radioheight>
                        <label></label>
                        <textoffsetx>50</textoffsetx>
                        <textcolor>FFEEEEEE</textcolor>
                        <focusedcolor>black</focusedcolor>
                        <textureradioonfocus colordiffuse="button_focus">icons/videoinfo/check.png</textureradioonfocus>
                        <textureradioofffocus colordiffuse="black">icons/videoinfo/add.png</textureradioofffocus>
                        <textureradioonnofocus colordiffuse="button_focus">icons/videoinfo/check.png</textureradioonnofocus>
                        <textureradiooffnofocus colordiffuse="FFEEEEEE">icons/videoinfo/add.png</textureradiooffnofocus>
                        <texturefocus>dialogs/keyboard/key3.png</texturefocus>
                        <texturenofocus colordiffuse="FFEEEEEE">dialogs/keyboard/key-nf3.png</texturenofocus>
                        <pulseonselect>false</pulseonselect>
                        <include>AddMyList</include>
                    </control>
                </control>
                <include>DialogInfo</include>
                <control type="textbox">
                    <left>10</left>
                    <width>900</width>
                    <height>210</height>
                    <label>$VAR[PlotVar]</label>
                    <font>25px_Medium</font>
                    <textcolor>gainsboro</textcolor>
                    <shadowcolor>text_shadow</shadowcolor>
                    <autoscroll delay="8000" time="1500" repeat="8000">Window.IsActive(movieinformation)</autoscroll>
                </control>
            </control>
            <include content="ProgressBarButton">
                <param name="percent" value="50" />
            </include>
            <include>DialogVideoInfoProgressBar</include>
            <include>CastInfo</include>
            <control type="grouplist" id="800">
                <orientation>vertical</orientation>
                <usecontrolcoords>true</usecontrolcoords>
                <right>35</right>
                <top>-165</top>
                <width>500</width>
                <height>165</height>
                <itemgap>5</itemgap>
                <onleft>900</onleft>
                <animation effect="slide" end="0,190" tween="cubic" easing="inout" time="300" reversible="true" condition="ControlGroup(800).HasFocus">Conditional</animation>
                <control type="radiobutton" id="801">
                    <right>0</right>
                    <height>80</height>
                    <width>80</width>
                    <align>right</align>
                    <aligny>center</aligny>
                    <font>27px_Medium</font>
                    <radioposx>21</radioposx>
                    <radioposy>1</radioposy>
                    <radiowidth>40</radiowidth>
                    <radioheight>80</radioheight>
                    <label>IMAGEN</label>
                    <textoffsetx>90</textoffsetx>
                    <textcolor>silver</textcolor>
                    <focusedcolor>FFEEEEEE</focusedcolor>
                    <shadowcolor>text_shadow</shadowcolor>
                    <textureradioonfocus colordiffuse="black">icons/videoinfo/image.png</textureradioonfocus>
                    <textureradioofffocus colordiffuse="black">icons/videoinfo/image.png</textureradioofffocus>
                    <textureradioonnofocus colordiffuse="FFEEEEEE">icons/videoinfo/image.png</textureradioonnofocus>
                    <textureradiooffnofocus colordiffuse="FFEEEEEE">icons/videoinfo/image.png</textureradiooffnofocus>
                    <texturefocus>dialogs/keyboard/key3.png</texturefocus>
                    <texturenofocus colordiffuse="FFEEEEEE">dialogs/keyboard/key-nf3.png</texturenofocus>
                    <pulseonselect>false</pulseonselect>
                    <textwidth>500</textwidth>
                    <onclick>SendClick(10)</onclick>
                </control>
                <control type="radiobutton" id="802">
                    <right>0</right>
                    <height>80</height>
                    <width>80</width>
                    <align>right</align>
                    <aligny>center</aligny>
                    <font>27px_Medium</font>
                    <radioposx>21</radioposx>
                    <radioposy>1</radioposy>
                    <radiowidth>40</radiowidth>
                    <radioheight>80</radioheight>
                    <label>ACTUALIZAR</label>
                    <textoffsetx>90</textoffsetx>
                    <textcolor>silver</textcolor>
                    <focusedcolor>FFEEEEEE</focusedcolor>
                    <shadowcolor>text_shadow</shadowcolor>
                    <textureradioonfocus colordiffuse="black">icons/videoinfo/update2.png</textureradioonfocus>
                    <textureradioofffocus colordiffuse="black">icons/videoinfo/update2.png</textureradioofffocus>
                    <textureradioonnofocus colordiffuse="FFEEEEEE">icons/videoinfo/update2.png</textureradioonnofocus>
                    <textureradiooffnofocus colordiffuse="FFEEEEEE">icons/videoinfo/update2.png</textureradiooffnofocus>
                    <texturefocus>dialogs/keyboard/key3.png</texturefocus>
                    <texturenofocus colordiffuse="FFEEEEEE">dialogs/keyboard/key-nf3.png</texturenofocus>
                    <pulseonselect>false</pulseonselect>
                    <textwidth>500</textwidth>
                    <onclick>SendClick(6)</onclick>
                </control>
            </control>
            <include>InfoMediaExtra</include>
        </control>
	</controls>
</window>
